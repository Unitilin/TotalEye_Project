<UserControl x:Class="TotalEye.CustomsControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TotalEye.CustomsControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    
    <PasswordBox x:Name="txtPass"
                             FontSize="14"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                             
                             Foreground="White"
                             CaretBrush="#462AD8"
                             BorderBrush="#DA34AE"
                             BorderThickness="0,0,0,2"                             
                             VerticalContentAlignment="Center"
                             Padding="32,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/TotalEye;component/Images/password.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
